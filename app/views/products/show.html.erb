

<h2><%= @product.name %></h2>
<% admins_only do %>
  <%= link_to "Edit Product", edit_product_path(@product) %>
  <%= link_to "Delete Product",
      product_path(@product),
      :method => :delete,
  :confirm => "Are you sure you want to delete this product?" %>

<% end %>

<%= render "show_product_form" %>
