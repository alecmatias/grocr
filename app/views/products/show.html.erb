<h2><%= @product.name %></h2>
<% admins_only do %>
  <ul class="button-group">
    <li> <%= link_to "Edit", edit_product_path(@product), :class => "small button" %></li>
    <li> <%= link_to "Delete",product_path(@product),:method => :delete,  :confirm => "Are you sure you want to delete '" + @product.name + "'?", :class => "small button" %></li>
  </ul>
      
<% end %>

<%= render "show_product_form" %>
