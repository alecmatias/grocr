<%= form_for (@product), :html => { :multipart => true } do |f| %>
<% if @product.image.exists? %>
  <h3>Attached Image</h3>
  <div id="product" class="image">
    <img src='<%= @product.image.url %>'>
    <p>
      <%# = link_to File.basename(@product.image.path),@product.image.url %>
    </p>
    <p><small><%= number_to_human_size(@product.image.size) %>
	(<%= @product.image.content_type %>)</small></p>
  </div>
  <p>
    <%= f.label :image, "Update image:" %>
<% else %>
  <p>
    <%= f.label :image, "Add an image: "%>
<% end %>
    <%= f.file_field :image %>
  </p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  <p>
    <%= f.label :manufacturer %><br />
    <%= f.text_field :manufacturer %>
  <p>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
    <%# f.text_field number_to_currency(@product.price) %>
  <p>
    <%= f.label :size %><br />
    <%= f.text_field :size %>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  <p>
    <%= f.label :upc %><br />
    <%= f.text_field :upc %>
  <p>
  <%= f.submit %>
<% end %>
